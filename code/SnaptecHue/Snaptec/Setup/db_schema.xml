<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="snaptechue_snaptec_brand" resource="default" engine="innodb" comment="Snaptec Brand Table">
        <column xsi:type="int" name="brand_id" identity="true" unsigned="true" nullable="false" comment="Brand ID"/>
        <column xsi:type="boolean" name="is_active" nullable="false" comment="Brand Is Enable"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Brand Title"/>
        <column xsi:type="text" name="description" nullable="true" comment="Brand Description"/>
        <column xsi:type="smallint" name="sort_order" nullable="true" comment="Brand Sort Order"/>
        <column xsi:type="varchar" name="image" nullable="true" length="255" comment="Brand Image"/>
        <constraint xsi:type="primary" name="PRIMARY">
            <column name="brand_id"/>
        </constraint>
    </table>
</schema>